<!DOCTYPE html>
<html>
<head>
  <title>Magna</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Static navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
          <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand">Magna</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
              <li class="active"><%= link_to 'Pagina Principal', eventos_path %></li>
              <% if user_signed_in? %>
              <li class="active"><a id="callIndex">Quienes Somos</a></li>
               <li class="active"><%= link_to 'Agregar Eventos', new_evento_path %></li>
               <li class="active"><%= link_to 'Administrar Denuncias', denuncia_path %></li>
               <li class="active"><%= link_to 'Agregar Distritos', new_distrito_path %></li>
               <ul class="nav navbar-nav navbar-right">
                <li class="active"><%= link_to 'Salir', destroy_user_session_path, :method => :delete %></li>
               </ul>
               <%else%>
               <li class="active"><%= link_to 'Denunciar', new_denuncium_path %></li>
               <ul class="nav navbar-nav navbar-right">
                <li class="active"><%= link_to 'Ingresar', new_user_session_path %></li>

                
              </ul>

              <%end%>
              	   
              </ul>
            
              
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <br>
    <br>
    <br>

    <div id='yieldBody' class="container">
    <%= yield %>
  </div>
</body>
</html>
